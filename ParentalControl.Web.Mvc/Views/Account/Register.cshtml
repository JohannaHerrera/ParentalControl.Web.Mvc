@model ParentalControl.Web.Mvc.Data.Parent
@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKN - Control Parental</title>
    @Styles.Render("~/Content/ParentalControlStyle.css")
</head>
<body>
    <div class="container">
        <div class="row align-items-center">
            <div id="image" class="col">
                <img src="~/Content/Images/control-parental.png">
            </div>
            <div id="form" class="col">
                <h1 id="TitleGreen">Control Parental</h1>
                <h2 id="TitleBlue">Bienvenido</h2>
                <section id="loginForm">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <h3>Nombre:</h3>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ParentUsername, new { @class = "form-control" })
                            </div>
                        </div>
                        <h3>Correo:</h3>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ParentEmail, new { @class = "form-control" })
                            </div>
                        </div>
                        <h3>Contraseña:</h3>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ParentPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="button-div">
                                <input type="submit" class="button" value="Registrarse" />
                            </div>
                        </div>
                        <p id="registerText">
                            ¿Ya tienes una cuenta? @Html.ActionLink("Iniciar Sesión", "Login")
                        </p>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>
