@model IEnumerable<ParentalControl.Web.Mvc.Data.News>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKN - Control Parental</title>
    @Styles.Render("~/Content/ParentalControlStyle.css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div id="menu" class="col">
                <div class="vertical-menu">
                    <a href="#" id="logoImgMenu"><img src="~/Content/Images/icono-menu.png"></a>
                    <a href="#"><img src="~/Content/Images/children.png"></a>
                    <a href="#">Cuentas Infantiles</a>
                    <a href="#"><img src="~/Content/Images/devices.png"></a>
                    <a href="#">Dispositivos</a>
                    <a href="#"><img src="~/Content/Images/calendario.png"></a>
                    <a href="#">Horarios</a>
                    <a href="#"><img src="~/Content/Images/notificaciones.png"></a>
                    <a href="#">Notificaciones</a>
                </div>
            </div>
            <div id="tableCol" class="col">
                <div id="menu-Parent">
                    <div class="button-menu-Parent">
                        <input type="submit" value="Cerrar Sesión" class="button-parent" />
                    </div>
                    <div class="button-menu-Parent">
                        <input type="submit" value="Mi Cuenta" class="button-parent" />
                    </div>
                </div>
                <div id="table-News">
                    <h2>Tips y Noticias</h2>
                    <hr />
                    <table class="table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewsTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewsDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NewsLink)
                                </td>
                            </tr>
                        }

                    </table>
                </div>                
            </div>
        </div>        
    </div>
</body>
</html>
