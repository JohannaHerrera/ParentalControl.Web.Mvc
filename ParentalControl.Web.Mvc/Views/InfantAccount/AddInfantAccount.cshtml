
@model ParentalControl.Web.Mvc.Models.InfantAccountModel

@{
    ViewBag.Title = "AddInfantAccount";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKN - Control Parental</title>
    @Styles.Render("~/Content/ParentalControlStyle.css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="containerDashboard">
        <div class="rowMenu">
            <div class="vertical-menu">
                <a href='@Url.Action("Index", "News")' id="logoImgMenu"><img src="~/Content/Images/icono-menu.png"></a>
                <a href='@Url.Action("Index", "InfantAccount")'><img src="~/Content/Images/children.png"></a>
                <a href="@Url.Action("Index", "InfantAccount")">Cuentas Infantiles</a>
                <a href='@Url.Action("Index", "Device")'><img src="~/Content/Images/devices.png"></a>
                <a href='@Url.Action("Index", "Device")'>Dispositivos</a>
                <a href='@Url.Action("Index", "Schedule")'><img src="~/Content/Images/calendario.png"></a>
                <a href='@Url.Action("Index", "Schedule")'>Horarios</a>
                <a href='@Url.Action("Index", "Notification")'><img src="~/Content/Images/notificaciones.png"></a>
                <a href='@Url.Action("Index", "Notification")'>Notificaciones</a>
            </div>
            <div class="info-Content">
                <div id="menu-Parent">
                    <div class="button-menu-Parent">
                        @Html.ActionLink("Cerrar Sesión", "Login", "Account", new { area = "" }, new { @class = "button-parent" })
                    </div>
                    <div class="button-menu-Parent">
                        @Html.ActionLink("Mi Cuenta", "MyProfile", "Account", new { area = "" }, new { @class = "button-parent" })
                    </div>
                </div>
                @using (Html.BeginForm("AddInfantAccount", "InfantAccount", FormMethod.Post))
                {
                    <div id="infantName-Rules">
                        <a href='@Url.Action("Index", "InfantAccount")'><img src="~/Content/Images/flecha-izquierda.png"></a>
                        <div id="sectionTitle">
                            <h2 id="sectionTitle">Crear cuenta infantil</h2>
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="mt-4">
                                <strong>@Html.LabelFor(infant => infant.InfantName)</strong>
                                <div class="mt-2">
                                    @Html.TextBoxFor(d => d.InfantName, "", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(d => d.InfantName, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="mt-4">
                                <strong>@Html.Label("Seleccione el género:")</strong>
                                <br />
                                <div class="mt-2">
                                    @Html.RadioButtonFor(d => d.InfantGender, "Masculino")
                                    <img class="img-fluid" src="~/Content/Images/hijo 64.png">
                                    @Html.Label("Masculino:")
                                </div>
                                <br />
                                <div class="mt-2">
                                    @Html.RadioButtonFor(d => d.InfantGender, "Femenino")
                                    <img class="img-fluid" src="~/Content/Images/nina_64.png">
                                    @Html.Label("Femenino:")
                                </div>
                                <br />

                                @Html.ValidationMessageFor(infant => infant.InfantGender, null, new { @class = "text-danger" })
                            </div>
                            <div class="mt-4" style="text-align:center">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>