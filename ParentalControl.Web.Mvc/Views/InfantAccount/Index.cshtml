                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            <img src="~/Content/Images/nina_64.png">
                                                        </td>
                                                    }

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.InfantName)
                                                    </td>
                                                    <td>
