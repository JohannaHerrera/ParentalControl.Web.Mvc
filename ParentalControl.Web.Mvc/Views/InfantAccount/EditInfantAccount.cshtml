
@model ParentalControl.Web.Mvc.Models.InfantAccountModel

@{
    ViewBag.Title = "EditInfantAccount";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JKN - Control Parental</title>
    @Styles.Render("~/Content/ParentalControlStyle.css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
    <div class="containerDashboard">
        <div class="rowMenu">
            <div class="vertical-menu">
                <a href='@Url.Action("Index", "News")' id="logoImgMenu"><img src="~/Content/Images/icono-menu.png"></a>
                <a href="@Url.Action("Index", "InfantAccount")"><img src="~/Content/Images/children.png"></a>
                <a href="@Url.Action("Index", "InfantAccount")">Cuentas Infantiles</a>
                <a href='@Url.Action("Index", "Device")'><img src="~/Content/Images/devices.png"></a>
                <a href='@Url.Action("Index", "Device")'>Dispositivos</a>
                <a href='@Url.Action("Index", "Schedule")'><img src="~/Content/Images/calendario.png"></a>
                <a href='@Url.Action("Index", "Schedule")'>Horarios</a>
                <a href="#"><img src="~/Content/Images/notificaciones.png"></a>
                <a href="#">Notificaciones</a>
            </div>
            <div class="info-Content">
                <div id="menu-Parent">
                    <div class="button-menu-Parent">
                        @Html.ActionLink("Cerrar Sesión", "Login", "Account", new { area = "" }, new { @class = "button-parent" })
                    </div>
                    <div class="button-menu-Parent">
                        @Html.ActionLink("Mi Cuenta", "MyProfile", "Account", new { area = "" }, new { @class = "button-parent" })
                    </div>
                </div>
                @using (Html.BeginForm("EditInfantAccount", "InfantAccount", FormMethod.Post))
                {
                    @Html.HiddenFor(infant => infant.InfantAccountId)
                    @Html.HiddenFor(infant => infant.ParentId)
                    <div id="deviceName">
                        <a href='@Url.Action("Index", "InfantAccount")'><img src="~/Content/Images/flecha-izquierda.png"></a>
                        <div id="sectionTitle">
                            @Html.TextBoxFor(infant => infant.InfantName, (object)new { @disabled = true, @id = "infantAccountName" })
                        </div>
                        <hr />
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div>
                                @Html.LabelFor(infant => infant.InfantName)
                                @Html.TextBoxFor(infant => infant.InfantName, "", new { @class = "form-control" })
                                @Html.ValidationMessageFor(infant => infant.InfantName, null, new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.Label("Seleccione el género:")<br />
                                @Html.Label("Masculino:")
                                @Html.RadioButtonFor(infant => infant.InfantGender, "Masculino")<br />
                                @Html.Label("Femenino:")
                                @Html.RadioButtonFor(infant => infant.InfantGender, "Femenino")<br />
                                @Html.ValidationMessageFor(infant => infant.InfantGender, null, new { @class = "text-danger" })
                            </div>

                            <div class="mt-4" style="text-align:center">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    function Habilitar() {
        var element = document.getElementById('infantAccountName');

        if (element.disabled == true) {
            element.disabled = false;
        }
        else {
            element.disabled = true;
        }
    }
</script>
